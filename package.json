{
  "name": "K",
  "private": true,
  "version": "0.1.3",
  "type": "module",
  "author": {
    "name": "K Team",
    "email": "maintainer@ahug.com"
  },
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build",
    "build:web": "tsc -b && vite build --mode web",
    "build:prod": "NODE_ENV=production tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "serve": "vite preview --host 0.0.0.0 --port 3000",
    "format": "prettier --check .",
    "format:fix": "prettier --write ./src",
    "format:check": "prettier --check ./src",
    "type-check": "tsc --noEmit",
    "electron:dev": "NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder --linux",
    "electron:build:deb": "npm run build && electron-builder --linux deb",
    "electron:build:appimage": "npm run build && electron-builder --linux AppImage",
    "electron:build:win": "npm run build && electron-builder --win --x64",
    "android:sync": "npx cap sync android",
    "android:build": "npm run build && npx cap sync android && cd android && ./gradlew assembleDebug"
  },
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/app": "^7.1.1",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.4",
    "@capacitor/keyboard": "^7.0.4",
    "@capacitor/status-bar": "^7.0.4",
    "@capgo/capacitor-navigation-bar": "^7.3.18",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "4.1.17",
    "@types/crypto-js": "^4.2.2",
    "@types/qrcode": "^1.5.6",
    "@types/react-router-dom": "^5.3.3",
    "buffer": "^6.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "crypto-js": "^4.2.0",
    "emoji-picker-react": "4.16.1",
    "jdenticon": "^3.3.0",
    "js-base64": "3.7.8",
    "linkify-react": "^4.3.2",
    "linkifyjs": "^4.3.2",
    "lucide-react": "0.556.0",
    "next-themes": "^0.4.6",
    "qrcode": "^1.5.4",
    "react": "^19.2.1",
    "react-dom": "19.2.1",
    "react-router-dom": "7.10.1",
    "sonner": "2.0.7",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "4.1.13",
    "vite-plugin-pwa": "1.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vite-pwa/assets-generator": "^1.0.2",
    "@vitejs/plugin-react": "^5.1.2",
    "electron": "^39.2.6",
    "electron-builder": "^26.3.5",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.7"
  },
  "build": {
    "appId": "com.k.app",
    "productName": "K",
    "publish": null,
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "public/**/*"
    ],
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Network",
      "icon": "public",
      "artifactName": "${productName}-${version}-linux-${arch}.${ext}"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "public/pwa-512x512.png",
      "artifactName": "${productName}-${version}-windows-${arch}.${ext}"
    },
    "deb": {
      "artifactName": "${productName}-${version}-linux-${arch}.deb"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-linux-${arch}.AppImage"
    },
    "portable": {
      "artifactName": "${productName}-${version}-windows-${arch}.exe"
    }
  }
}
